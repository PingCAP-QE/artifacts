{{- if ne .profile "release" }}
{{- $tag_suffix = printf "-%s%s" .profile $no_profile_tag_suffix -}}
{{- end }}

{{- $tags := coll.Slice }}
{{- $profile := .profile }}
{{- range $index, $tag := .artifactory.tags }}

function parse_arguments() {
  while getopts ":w:o:abph" opt; do
    case ${opt} in
      w)
        release_ws=${OPTARG}
        ;;
      o)
        result_path=${OPTARG}
        ;;
      a)
        need_package=true
        ;;
      b)
        need_build=true
        ;;
      p)
        need_push=true
        ;;
      h)
        print_help
        exit 0
        ;;
      \?)
        echo "Invalid option: -$OPTARG" 1>&2
        exit 1
        ;;
      :)
        echo "Option -$OPTARG requires an argument." 1>&2
        exit 1
        ;;
    esac
  done
  shift $((OPTIND -1))
}


{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image_copy_rules": {
      "type": "object",
      "patternProperties": {
        "^(us-docker[.]pkg[.]dev/pingcap-testing-account/(hub|tidbx)|hub[.]pingcap[.]net)/(pingcap|tikv)": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "tags_regex": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "tag_regex_replace": {
                "type": "string"
              },
              "dest_repositories": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "hostname"
                },
                "minItems": 1
              },
              "constant_tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["description", "tags_regex", "dest_repositories"]
          }
        }
      },
      "additionalProperties": false
    },
    "tiup_publish_rules": {
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "tags_regex": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "version_regex_replace": {
                "description": "version value to force publish to mirrors",
                "type": "string"
              },
              "dest_mirrors": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["staging", "prod"]
                },
                "minItems": 1
              }
            },
            "required": ["description", "tags_regex", "dest_mirrors"]
          }
        }
      },
      "additionalProperties": false
    }
  }
}
